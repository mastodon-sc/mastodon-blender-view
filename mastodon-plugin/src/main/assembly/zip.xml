    <id>bin</id>
    <baseDirectory>mastodon_blender_view</baseDirectory>
    <formats>
        <format>zip</format>
    </formats>
    <fileSets>
        <fileSet>
            <includes>
                <include>*.py</include>
            </includes>
            <directory>../blender-addon</directory>
            <outputDirectory>/</outputDirectory>
        </fileSet>
        <fileSet>
            <includes>
                <include>*.proto</include>
            </includes>
            <directory>../proto</directory>
            <outputDirectory>/</outputDirectory>
        </fileSet>
    </fileSets>
</assembly>
